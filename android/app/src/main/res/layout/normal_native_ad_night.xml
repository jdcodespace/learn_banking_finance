            <com.google.android.gms.ads.nativead.MediaView
                android:id="@+id/media_view"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/middle"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="@dimen/gnt_no_size"
                android:layout_marginBottom="@dimen/gnt_no_size"
                android:paddingVertical="20dp" />


            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/media_view"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:paddingVertical="10dp"
                android:textColor="@color/white"
                android:textSize="12dp" />

            <Button
                android:id="@+id/cta"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@id/body"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/my_button"
                android:gravity="center"
                android:lines="1"
                android:padding="10dp"
                android:textColor="@color/adButtonBlackColor"
                tools:text="@android:string/autofill" />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView4_slider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_radius_ad"
            android:paddingHorizontal="5dp"
            android:paddingVertical="2dp"
            android:text="AD"
            android:textColor="@color/gnt_white"
            android:textSize="11sp" />


    </RelativeLayout>
